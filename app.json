{
  "expo": {
    "name": "tsla-ble-dash-expo",
    "slug": "tsla-ble-dash-expo",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": false,
          "modes": [
            "central"
          ],
          "neverForLocation": false,
          "bluetoothAlwaysPermission": "tsla-ble-dash needs Bluetooth access to connect to your vehicle."
        }
      ],
      "./plugins/withBluetoothScanPermissionFix",
      "./plugins/withTurnScreenOn"
    ],
    "ios": {
      "bundleIdentifier": "com.leonzdev.tsla-ble-dash",
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "tsla-ble-dash uses Bluetooth to discover and connect to your Tesla vehicle dashboard.",
        "NSBluetoothPeripheralUsageDescription": "tsla-ble-dash needs Bluetooth access to communicate with your Tesla vehicle dashboard.",
        "NSLocationWhenInUseUsageDescription": "Location access is required for Bluetooth scanning to find your Tesla."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "package": "com.anonymous.tslabledashexpo"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
